{
    "name": "simensen/ephemeral-todos",
    "description": "A PHP library for building todo management systems with ephemeral todos that automatically create when scheduled and delete when completed or expired, eliminating information overload and keeping users focused on what matters now",
    "keywords": ["todo", "ephemeral", "scheduling", "productivity", "task-management", "cron", "automation", "lifecycle", "temporary", "focus"],
    "homepage": "https://github.com/simensen/ephemeral-todos",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Beau Simensen",
            "email": "beau@beausimensen.com",
            "homepage": "https://beausimensen.com"
        }
    ],
    "support": {
        "issues": "https://github.com/simensen/ephemeral-todos/issues",
        "source": "https://github.com/simensen/ephemeral-todos"
    },
    "require": {
        "php": "^8.3|^8.4|^8.5",
        "nesbot/carbon": "^2.0|^3.0",
        "illuminate/collections": "^9.0|^10.0|^11.0",
        "dragonmantank/cron-expression": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Simensen\\EphemeralTodos\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Simensen\\EphemeralTodos\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "format": "tools/php-cs-fixer fix",
        "format:check": "tools/php-cs-fixer fix --dry-run --diff",
        "analyse": "tools/phpstan analyse"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}